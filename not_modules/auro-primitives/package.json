{
  "//": [
    "================================================================================",
    "# To work within the development environment, run the following tasks",
    "  1. $ npm run dev",
    "  2. Go to http://localhost:8000",
    "================================================================================"
  ],
  "name": "@aurodesignsystem/auro-primitives",
  "version": "0.0.0",
  "description": "Primitive design tokens for the Auro Design System",
  "repository": {
    "type": "git",
    "url": "https://github.com/AlaskaAirlines/auro-primitives"
  },
  "type": "module",
  "main": "dist/registered.js",
  "types": "dist/index.d.ts",
  "license": "Apache-2.0",
  "engines": {
    "node": "^20.x || ^22.x "
  },
  "dependencies": {
    "lit": "^3.3.0"
  },
  "devDependencies": {
    "@aurodesignsystem/auro-cli": "^3.0.3",
    "@aurodesignsystem/auro-config": "^1.3.0",
    "@aurodesignsystem/auro-library": "^5.5.3",
    "husky": "^9.1.7"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 iOS major versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Safari major versions"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "alaska airlines",
    "auro",
    "design system",
    "web components"
  ],
  "scripts": {
    "build": "auro build",
    "dev": "auro dev -w -s",
    "dev:open": "auro dev -w -s --open",
    "lint": "biome check --no-errors-on-unmatched && stylelint \"./src/**/*.scss\"",
    "lint:fix": "biome check --fix --no-errors-on-unmatched && stylelint \"./src/**/*.scss\" --fix",
    "test": "auro test",
    "test:watch": "auro test --watch",
    "prepare": "husky"
  },
  "exports": {
    "./package.json": "./package.json",
    "./readme.md": "./README.md",
    ".": "./dist/registered.js",
    "./demo/*.md": "./demo/*.md",
    "./demo/*.js": "./demo/*.min.js",
    "./class": {
      "module": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "demo/**/*",
    "CHANGELOG.md",
    "README.md",
    "LICENSE",
    "NOTICE"
  ]
}
