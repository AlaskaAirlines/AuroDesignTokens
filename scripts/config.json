{
  "source": ["./src/**/*.json"],
  "platforms": {
    "SassVariables": {
      "transformGroup": "scss",
      "buildPath": "./dist/tokens/",
      "files": [
        {
          "destination": "_TokenVariables.scss",
          "format": "scss/variables"
        }
      ]
    },
    "CSSCustomElements": {
      "transformGroup": "css",
      "buildPath": "./dist/tokens/",
      "files": [
        {
          "destination": "CSSTokenProperties.css",
          "format": "css/variables"
        }
      ]
    },
    "CSSCustomElements_SassFiletype": {
      "transformGroup": "css",
      "buildPath": "./dist/tokens/",
      "files": [
        {
          "destination": "_TokenProperties.scss",
          "format": "css/variables"
        }
      ]
    },
    "JavaScript": {
      "transformGroup": "js",
      "buildPath": "./dist/tokens/",
      "files": [
        {
          "destination": "TokenColorVariables.js",
          "format": "javascript/object",
          "filter": {
            "attributes": {
              "category": "color"
            }
          }
        }
      ]
    },
    "JSONtest": {
      "transformGroup": "css",
      "buildPath": "./test/",
      "files": [
        {
          "destination": "validJSON",
          "format": "css/variables"
        }
      ]
    }
  }
}
