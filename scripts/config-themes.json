{
  "source": [
    "./src/primitives/{{themeSourceDir}}/**/*.json"
  ],
  "include": [
    "./src/primitives/base/**/*.json",
    "./src/shared/**/*.json",
    "./src/themes/{{themeDir}}/**/*.json"
  ],
  "platforms": {
    "CSSCustomProperties": {
      "transformGroup": "css",
      "prefix": "ds",
      "comment": "File type: CSS; variable type: CSS; filter: public, semantic",
      "buildPath": "./dist/themes/{{themeDir}}/",
      "files": [
        {
          "destination": "CSSCustomProperties--{{themeDirNoHyphens}}.css",
          "format": "css/variables",
          "filter": {
            "public": true,
            "deprecated": false,
            "type": "semantic"
          }
        }
      ]
    },
    "SCSSVariables": {
      "transformGroup": "scss",
      "prefix": "ds",
      "comment": "File type: SCSS; variable type: Sass; filter: public",
      "buildPath": "./dist/themes/{{themeDir}}/",
      "files": [
        {
          "destination": "SCSSVariables--{{themeDirNoHyphens}}.scss",
          "format": "scss/variables",
          "filter": {
            "public": true,
            "deprecated": false
          }
        },
        {
          "destination": "SCSSVariablesMapFlat--{{themeDirNoHyphens}}.scss",
          "format": "custom/scss/map-flat",
          "mapName": "auroTokens",
          "filter": {
            "public": true,
            "deprecated": false
          }
        }
      ]
    },
    "JSONVariables": {
      "transformGroup": "css",
      "prefix": "ds",
      "comment": "File type: JSON; variable type: CSS; filter: public",
      "buildPath": "./dist/themes/{{themeDir}}/",
      "files": [
        {
          "destination": "JSONVariablesNested--{{themeDirNoHyphens}}.json",
          "format": "json/nested",
          "filter": {
            "public": true,
            "deprecated": false
          }
        }
      ]
    },
    "primitives_SCSS": {
      "transformGroup": "scss",
      "prefix": "{{themeCode}}",
      "comment": "File type: SCSS; variable type: Sass; filter: primitive",
      "buildPath": "./dist/themes/{{themeDir}}/",
      "files": [
        {
          "destination": "primitives--{{themeDirNoHyphens}}.scss",
          "format": "scss/variables",
          "filter": {
            "type": "primitive",
            "deprecated": false
          }
        }
      ]
    },
    "JSObject--allTokens": {
      "transformGroup": "js",
      "prefix": "ds",
      "comment": "File type: JS; data type: JS; filter: classic colors",
      "buildPath": "./dist/themes/{{themeDir}}/",
      "transforms": [
        "attribute/cti",
        "name/cti/kebab",
        "color/css"
      ],
      "files": [
        {
          "destination": "JSObject--allTokens.js",
          "format": "javascript/module",
          "filter": {
            "public": true,
            "deprecated": false
          }
        }
      ]
    },

    "Android": {
      "transformGroup": "custom/native-colors",
      "buildPath": "mobile/android/auroDesignTokens-sdk-android/src/main/kotlin/com/alaskaair/aurodesigntokens_sdk_android/",
      "files": [
        {
          "destination": "AlaskaColors.kt",
          "format": "custom/formats/Android",
          "filter": {
            "attributes": {
              "category": "color"
            }
          },
          "options": {
            "className": "AlaskaColors",
            "packageName": "com.alaskaair.aurodesigntokens_sdk_android",
            "objectType": "class"
          }
        }
      ]
    },

    "swiftui": {
      "transformGroup": "custom/native-colors",
      "buildPath": "mobile/ios/Sources/auroDesignTokens-sdk-ios/",
      "files": [
        {
          "destination": "AlaskaColors.swift",
          "format": "custom/formats/swiftui",
          "filter": {
            "attributes": {
              "category": "color"
            }
          },
          "options": {
            "className": "AlaskaColors"
          }
        }
      ]
    }
  }
}
