{
  "source": ["./src/themes/auro-classic/color/*.json"],
  "include": ["./src/themes/auro-classic/font.json", "./src/themes/auro-classic/size/*.json", "./src/themes/auro-classic/*.json"],
  "platforms": {
    "SCSSVariables": {
      "transformGroup": "scss",
      "prefix": "ds",
      "comment": "File type: SCSS; variable type: Sass; filter: public;",
      "buildPath": "./dist/base/",
      "files": [
        {
          "destination": "SCSSVariables.scss",
          "format": "scss/variables",
          "filter": {
            "public": true
          }
        }
      ]
    }
  }
}
