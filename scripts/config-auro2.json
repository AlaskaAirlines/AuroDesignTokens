{
  "source": ["./src/primitives/{base,auro-2}/*.json"],
  "include": ["./src/themes/auro-2/**/*.json"],
  "platforms": {
    "CSSCustomProperties": {
      "transformGroup": "css",
      "prefix": "ds",
      "comment": "File type: CSS; variable type: CSS; filter: public",
      "buildPath": "./dist/auro-2/",
      "files": [
        {
          "destination": "CSSCustomProperties--auro2.css",
          "format": "css/variables",
          "filter": {
            "public": true,
            "deprecated": false
          }
        }
      ]
    },
    "SCSSVariables": {
      "transformGroup": "scss",
      "prefix": "ds",
      "comment": "File type: SCSS; variable type: Sass; filter: public",
      "buildPath": "./dist/auro-2/",
      "files": [
        {
          "destination": "SCSSVariables--auro2.scss",
          "format": "scss/variables",
          "filter": {
            "public": true,
            "deprecated": false
          }
        },
        {
          "destination": "SCSSVariablesMapFlat--auro2.scss",
          "format": "custom/scss/map-flat",
          "mapName": "auroTokens",
          "filter": {
            "public": true,
            "deprecated": false
          }
        }
      ]
    },
    "JSONVariables": {
      "transformGroup": "css",
      "prefix": "ds",
      "comment": "File type: JSON; variable type: CSS; filter: public",
      "buildPath": "./dist/auro-2/",
      "files": [
        {
          "destination": "JSONVariablesNested--auro2.json",
          "format": "json/nested",
          "filter": {
            "public": true,
            "deprecated": false
          }
        }
      ]
    },
    "primitives_SCSS": {
      "transformGroup": "scss",
      "prefix": "a2",
      "comment": "File type: SCSS; variable type: Sass; filter: primitive",
      "buildPath": "./dist/auro-2/",
      "files": [
        {
          "destination": "primitives--auro2.scss",
          "format": "scss/variables",
          "filter": {
            "type": "primitive",
            "deprecated": false
          }
        }
      ]
    },
    "JSObject--allTokens": {
      "transformGroup": "js",
      "prefix": "ds",
      "comment": "File type: JS; data type: JS; filter: classic colors",
      "buildPath": "./dist/auro-2/",
      "transforms": ["attribute/cti", "name/cti/kebab", "color/css"],
      "files": [
        {
          "destination": "JSObject--allTokens.js",
          "format": "javascript/module",
          "filter": {
            "public": true,
            "deprecated": false
          }
        }
      ]
    },
    "compose": {
      "transformGroup": "custom/native-colors",
      "buildPath": "src/android/auroDesignTokens-sdk-android/src/main/kotlin/com/alaskaair/aurodesigntokens_sdk_android/",
      "files": [
        {
          "destination": "Auro2Colors.kt",
          "format": "custom/formats/compose",
          "filter": {
            "attributes": {
              "category": "color"
            }
          },
          "options": {
            "className": "Auro2Colors",
            "packageName": "com.alaskaair.aurodesigntokens_sdk_android",
            "objectType": "class"
          }
        }
      ]
    },
    "swift": {
      "transformGroup": "custom/native-colors",
      "buildPath": "Sources/auroDesignTokens-sdk-ios/",
      "files": [
        {
          "destination": "Auro2Colors.swift",
          "format": "custom/formats/swiftui",
          "filter": {
            "attributes": {
              "category": "color"
            }
          },
          "options": {
            "className": "Auro2Colors"
          }
        }
      ]
    }
  }
}
